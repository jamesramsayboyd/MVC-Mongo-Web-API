@model IEnumerable<ApexDataApi.Models.Player>

@{
    ViewData["Title"] = "Players";
}

<h1>Players (Admin)</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                Rank
            </th>
            <th>
                Avatar
            </th>
            <th>
                Player
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Topranked)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.Topranked)
                {
                    <img src="@Url.Content("~/Content/Images/topranked.png")" alt="Top Ranked" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                <div class="avatarsmall">
                        <img src="@Url.Content("~/Content/Images/players/" + @item.Avatar)" alt="@item.PlayerName Avatar" />
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DetailsAdmin" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <p>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
    </p>
</div>